{
	"compilerOptions": {
		"incremental": true,
		"target": "es2022",
		"module": "commonjs",
		"lib": ["dom", "es2022"],
		"jsx": "react-jsx",
		"strict": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": ".erb/dll",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/renderer/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"build/types/**/*.ts"
	],
	"exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
